<Window x:Class="ProyectoSemestral.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoSemestral"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid x:Name="Grid1" HorizontalAlignment="Left" Height="268" VerticalAlignment="Top" Width="503" Margin="267,10,0,0"/>
        <Button x:Name="AZ" Content="Ordenar A-Z" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="31,336,686,63"/>
        <Button x:Name="Za" Content="Ordenar Z-A" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="31,374,0,0"/>
        <Button x:Name="Año_mayor" Content="▲ Año" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="156,336,0,0"/>
        <Button x:Name="Año_menor" HorizontalAlignment="Left" VerticalAlignment="Top" Content="▼ Año"  Width="75" Margin="156,374,561,25"/>
        <Button Content="Button" HorizontalAlignment="Left" Height="4" Margin="592,56,0,0" VerticalAlignment="Top" Width="1"/>
        <Button x:Name="Nuevo" Content="Nuevo Elemento" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="267,10,0,0" Click="Nuevo_Click"/>
        <ListView x:Name="lst_catalogo" HorizontalAlignment="Left"    Height="293" VerticalAlignment="Top" Width="221" Margin="10,10,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn  Header="Titulos"  Width="125" DisplayMemberBinding="{Binding Titulo}"/>
                    <GridViewColumn Header="Año" Width="100" DisplayMemberBinding="{Binding Año}"/>


                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
